<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- Id -->
        <TextView
                android:id="@+id/list_users_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <!-- First Name -->
        <TextView
                android:id="@+id/list_users_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/list_users_id"
                app:layout_constraintTop_toTopOf="parent"/>

        <!-- Last-Name -->
        <TextView
                android:id="@+id/list_users_lastname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/list_users_name"
                app:layout_constraintTop_toTopOf="parent"/>

        <!-- Birth-Day -->
        <TextView
                android:id="@+id/list_users_birthday"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/list_users_lastname"
                app:layout_constraintTop_toTopOf="parent"/>

        <!-- CF -->
        <TextView
                android:id="@+id/list_users_cf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/list_users_birthday"
                app:layout_constraintTop_toTopOf="parent"/>

        <!-- Grade -->
        <TextView
                android:id="@+id/list_users_grade"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/list_users_cf"
                app:layout_constraintTop_toTopOf="parent"/>

        <!-- Username -->
        <TextView
                android:id="@+id/list_users_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/list_users_grade"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</HorizontalScrollView>