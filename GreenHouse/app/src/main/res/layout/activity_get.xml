<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".cloud.jobs.GetActivity">

    <!-- Inside Greenhouse Reading Check Box-->
    <CheckBox
            android:textColor="#ffffff"
            android:text="Inside Greenhouse"
            android:id="@+id/get_inside_gh_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/get_outside_gh_cb"/>

    <!-- Outside Greenhouse Reading Check Box-->
    <CheckBox
            android:textColor="#ffffff"
            android:text="Outside Greenhouse"
            android:id="@+id/get_outside_gh_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/get_inside_gh_cb"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/get_inside_gh_cb"/>

    <HorizontalScrollView
            android:id="@+id/scroll_view_get_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/get_inside_gh_cb"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scroll_view_get_activity_const_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <!-- Max Height Picker -->
            <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/get_min_height_tv"
                    android:textSize="20dp"
                    android:text="Min Height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/get_max_height_tv"
                    app:layout_constraintLeft_toLeftOf="parent"
            />
            <NumberPicker
                    android:id="@+id/get_min_height_picker"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="@id/get_min_height_tv"
                    app:layout_constraintLeft_toLeftOf="@id/get_min_height_tv"
                    app:layout_constraintTop_toBottomOf="@id/get_min_height_tv"
            />

            <!-- Get Min Height-->
            <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/get_max_height_tv"
                    android:textSize="20dp"
                    android:text="Max Height"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/get_min_height_tv"
            />
            <NumberPicker
                    android:id="@+id/get_max_height_picker"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="@id/get_max_height_tv"
                    app:layout_constraintLeft_toLeftOf="@id/get_max_height_tv"
                    app:layout_constraintTop_toBottomOf="@id/get_max_height_tv"
            />



            <!-- Min Plants picker -->
            <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/get_min_plants_tv"
                    android:textSize="20dp"
                    android:text="Min Plants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toRightOf="@id/get_max_height_tv"
                    app:layout_constraintRight_toLeftOf="@id/get_max_plants_tv"
                    app:layout_constraintTop_toTopOf="@id/get_max_height_tv"
            />
            <NumberPicker
                    android:id="@+id/get_min_plants_picker"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="@id/get_min_plants_tv"
                    app:layout_constraintLeft_toLeftOf="@id/get_min_plants_tv"
                    app:layout_constraintTop_toBottomOf="@id/get_min_plants_tv"
            />

            <!-- Min Plants picker -->
            <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/get_max_plants_tv"
                    android:textSize="20dp"
                    android:text="Max Plants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@id/get_min_plants_tv"
                    app:layout_constraintTop_toTopOf="@id/get_max_height_tv"
            />
            <NumberPicker
                    android:id="@+id/get_max_plants_picker"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="@id/get_max_plants_tv"
                    app:layout_constraintLeft_toLeftOf="@id/get_max_plants_tv"
                    app:layout_constraintTop_toBottomOf="@id/get_max_plants_tv"
            />



            <!-- Min Leaves picker -->
            <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/get_min_leaves_tv"
                    android:textSize="20dp"
                    android:text="Min Leaves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toRightOf="@id/get_max_plants_tv"
                    app:layout_constraintRight_toLeftOf="@id/get_max_leaves_tv"
                    app:layout_constraintTop_toTopOf="@id/get_max_plants_tv"
            />
            <NumberPicker
                    android:id="@+id/get_min_leaves_picker"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="@id/get_min_leaves_tv"
                    app:layout_constraintLeft_toLeftOf="@id/get_min_leaves_tv"
                    app:layout_constraintTop_toBottomOf="@id/get_min_leaves_tv"
            />

            <!-- Min Plants picker -->
            <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/get_max_leaves_tv"
                    android:textSize="20dp"
                    android:text="Max Leaves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@id/get_min_leaves_tv"
                    app:layout_constraintTop_toTopOf="@id/get_max_height_tv"
            />
            <NumberPicker
                    android:id="@+id/get_max_leaves_picker"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="@id/get_max_leaves_tv"
                    app:layout_constraintLeft_toLeftOf="@id/get_max_leaves_tv"
                    app:layout_constraintTop_toBottomOf="@id/get_max_leaves_tv"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

    <ListView
            android:id="@+id/users_list_view_get_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/scroll_view_get_activity"
            app:layout_constraintBottom_toTopOf="@id/get_data_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <!-- Get Button: send query to RESTFul Server -->
    <Button
            android:textColor="#ffffff"
            android:text="GET"
            android:backgroundTint="#111111"
            android:id="@+id/get_data_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>