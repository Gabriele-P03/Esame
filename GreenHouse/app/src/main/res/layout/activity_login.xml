<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageButton
            android:src="@mipmap/settings"
            android:background="@android:color/transparent"
            android:id="@+id/settings_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <EditText
            android:background="@drawable/bgnd_login"
            android:text="Username..."
            android:textColor="#000000"
            android:textAlignment="center"
            android:id="@+id/login_usr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
    />

    <EditText
            android:background="@drawable/bgnd_login"
            android:inputType="textPassword"
            android:text="Password..."
            android:textColor="#000000"
            android:textAlignment="center"
            android:id="@+id/login_psw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_usr"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
    />

    <CheckBox
            android:id="@+id/remember_login"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Remember Credentials"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/login_psw"
            app:layout_constraintRight_toRightOf="@id/login_psw"
            app:layout_constraintTop_toBottomOf="@id/login_psw"
            android:layout_marginTop="10dp"
    />

    <Button
            android:background="@drawable/bgnd_login"
            android:backgroundTint="@android:color/black"
            android:id="@+id/login_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Log-In"
            app:layout_constraintLeft_toLeftOf="@id/login_psw"
            app:layout_constraintRight_toRightOf="@id/login_psw"
            app:layout_constraintTop_toBottomOf="@id/remember_login"
            android:layout_marginTop="10dp"
    />


</androidx.constraintlayout.widget.ConstraintLayout>