<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/data_list_view_layout"
        android:background="@android:color/transparent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- Id of data -->
    <TextView
            android:id="@+id/data_list_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/data_list_view_id_harvester"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Id of harvester -->
    <TextView
            android:id="@+id/data_list_view_id_harvester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/data_list_view_id"
            android:layout_marginLeft="10dp"
            app:layout_constraintRight_toLeftOf="@id/data_list_view_plants"
            app:layout_constraintTop_toTopOf="parent"/>


    <!-- Plants -->
    <TextView
            android:id="@+id/data_list_view_plants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/data_list_view_id_harvester"
            app:layout_constraintRight_toLeftOf="@id/data_list_view_leaves"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- leaves -->
    <TextView
            android:id="@+id/data_list_view_leaves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/data_list_view_plants"
            app:layout_constraintRight_toLeftOf="@id/data_list_view_max_height"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- max height -->
    <TextView
            android:id="@+id/data_list_view_max_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/data_list_view_leaves"
            app:layout_constraintRight_toLeftOf="@id/data_list_view_date"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- date -->
    <TextView
            android:id="@+id/data_list_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintRight_toLeftOf="@id/data_list_view_temperature"
            app:layout_constraintLeft_toRightOf="@id/data_list_view_max_height"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- temperature -->
    <TextView
            android:id="@+id/data_list_view_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintRight_toLeftOf="@id/data_list_view_humidity"
            app:layout_constraintLeft_toRightOf="@id/data_list_view_date"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- humidity -->
    <TextView
            android:id="@+id/data_list_view_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintRight_toLeftOf="@id/data_list_view_light"
            app:layout_constraintLeft_toRightOf="@id/data_list_view_temperature"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- light -->
    <TextView
            android:id="@+id/data_list_view_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/data_list_view_light"
            app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>