<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:background="@drawable/background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.greenhouse.MainActivity"
        android:layout_weight="4">

    <!-- Temperature Ring -->
    <ProgressBar
            android:id="@+id/temperature_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/light_circle_drawable"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:progress="100"
            android:rotation="-90"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/humidity_progress_bar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
    />
    <ImageView
            android:scaleType="center"
            android:src="@mipmap/thermometer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/temperature_progress_bar"
            app:layout_constraintRight_toRightOf="@id/temperature_progress_bar"
            app:layout_constraintTop_toTopOf="@id/temperature_progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/temperature_progress_bar"/>
    <TextView
            android:textAlignment="center"
            android:id="@+id/temperature_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/temperature_progress_bar"
            app:layout_constraintLeft_toLeftOf="@id/temperature_progress_bar"
            app:layout_constraintRight_toRightOf="@id/temperature_progress_bar"/>


    <!-- Humidity Ring -->
    <ProgressBar
            android:scaleX="2"
            android:scaleY="2"
            android:id="@+id/humidity_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/light_circle_drawable"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:progress="100"
            android:rotation="-90"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/temperature_progress_bar"
            app:layout_constraintRight_toLeftOf="@id/light_progress_bar"
            app:layout_constraintBottom_toTopOf="@id/values_tv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>
    <ImageView
            android:scaleType="center"
            android:src="@mipmap/humidity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/humidity_progress_bar"
            app:layout_constraintRight_toRightOf="@id/humidity_progress_bar"
            app:layout_constraintTop_toTopOf="@id/humidity_progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/humidity_progress_bar"/>
    <TextView
            android:textAlignment="center"
            android:id="@+id/humidity_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/humidity_progress_bar"
            app:layout_constraintLeft_toLeftOf="@id/humidity_progress_bar"
            app:layout_constraintRight_toRightOf="@id/humidity_progress_bar"/>


    <!-- Light Ring -->
    <ProgressBar
            android:scaleY="2"
            android:scaleX="2"
            android:id="@+id/light_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/light_circle_drawable"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:progress="100"
            android:rotation="-90"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/humidity_progress_bar"
            app:layout_constraintTop_toBottomOf="@id/temperature_progress_bar"
            app:layout_constraintBottom_toTopOf="@id/values_tv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>
    <ImageView
            android:rotation="180"
            android:scaleType="center"
            android:src="@mipmap/uv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/light_progress_bar"
            app:layout_constraintRight_toRightOf="@id/light_progress_bar"
            app:layout_constraintTop_toTopOf="@id/light_progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/light_progress_bar"/>
    <TextView
            android:textAlignment="center"
            android:id="@+id/light_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/light_progress_bar"
            app:layout_constraintLeft_toLeftOf="@id/light_progress_bar"
            app:layout_constraintRight_toRightOf="@id/light_progress_bar"/>


    <!-- Values -->
    <TextView
            android:onClick="valuesTVPressed"
            android:text="\n\n"
            android:id="@+id/values_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/blt_button"
            app:layout_constraintRight_toRightOf="@id/update_seed_button"
            app:layout_constraintBottom_toTopOf="@id/update_seed_button"
            app:layout_constraintTop_toBottomOf="@id/humidity_progress_bar"
            android:layout_marginBottom="20dp"/>

    <!-- Bluetooth button -->
    <ImageButton
            android:backgroundTint="#557755"
            android:onClick="bltButtonOnClick"
            android:scaleType="fitCenter"
            android:src="@mipmap/blt"
            android:id="@+id/blt_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/update_seed_button"
            app:layout_constraintTop_toTopOf="@id/update_seed_button"
            app:layout_constraintBottom_toBottomOf="@id/update_seed_button"/>

    <!-- Update seed button -->
    <ImageButton
            android:backgroundTint="#004444"
            android:onClick="seedUpdateButton"
            android:src="@mipmap/seed"
            android:id="@+id/update_seed_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/blt_button"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>