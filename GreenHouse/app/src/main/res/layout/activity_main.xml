<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_lay"
        android:orientation="vertical"
        android:background="@drawable/background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.greenhouse.MainActivity">

    <!-- Menu Button -->
    <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/menu"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:onClick="inflateMenu"
    />

    <View
            android:id="@+id/divider"
            style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu_button"
            android:layout_marginTop="5dp"
    />

    <!-- Temperature Ring -->
    <ProgressBar
            android:id="@+id/temperature_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/light_circle_drawable"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:progress="100"
            android:rotation="-90"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu_button"
            app:layout_constraintBottom_toTopOf="@id/humidity_progress_bar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
    />
    <ImageView
            android:scaleType="center"
            android:src="@mipmap/thermometer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/temperature_progress_bar"
            app:layout_constraintRight_toRightOf="@id/temperature_progress_bar"
            app:layout_constraintTop_toTopOf="@id/temperature_progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/temperature_progress_bar"/>
    <TextView
            android:textAlignment="center"
            android:id="@+id/temperature_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/temperature_progress_bar"
            app:layout_constraintLeft_toLeftOf="@id/temperature_progress_bar"
            app:layout_constraintRight_toRightOf="@id/temperature_progress_bar"/>



    <!-- Humidity Ring -->
    <ProgressBar
            android:id="@+id/humidity_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/light_circle_drawable"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:progress="100"
            android:rotation="-90"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/temperature_progress_bar"
            app:layout_constraintBottom_toTopOf="@id/light_progress_bar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
    />
    <ImageView
            android:scaleType="center"
            android:src="@mipmap/humidity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/humidity_progress_bar"
            app:layout_constraintRight_toRightOf="@id/humidity_progress_bar"
            app:layout_constraintTop_toTopOf="@id/humidity_progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/humidity_progress_bar"/>
    <TextView
            android:textAlignment="center"
            android:id="@+id/humidity_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/humidity_progress_bar"
            app:layout_constraintLeft_toLeftOf="@id/humidity_progress_bar"
            app:layout_constraintRight_toRightOf="@id/humidity_progress_bar"/>

    <!-- Light Ring -->
    <ProgressBar
            android:id="@+id/light_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/light_circle_drawable"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:progress="100"
            android:rotation="-90"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/humidity_progress_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
    />
    <ImageView
            android:scaleType="center"
            android:src="@mipmap/uv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/light_progress_bar"
            app:layout_constraintRight_toRightOf="@id/light_progress_bar"
            app:layout_constraintTop_toTopOf="@id/light_progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/light_progress_bar"/>
    <TextView
            android:textAlignment="center"
            android:id="@+id/light_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/light_progress_bar"
            app:layout_constraintLeft_toLeftOf="@id/light_progress_bar"
            app:layout_constraintRight_toRightOf="@id/light_progress_bar"/>

</androidx.constraintlayout.widget.ConstraintLayout>