<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.greenhouse.SeedActivity"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:id="@+id/temp_picker_tv"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Temperature: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/min_temp_picker"/>
    <NumberPicker
            android:id="@+id/min_temp_picker"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintRight_toLeftOf="@id/max_temp_picker"
            app:layout_constraintTop_toBottomOf="@id/temp_picker_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/humidity_picker_tv"
            android:layout_marginTop="20dp"/>
    <NumberPicker
            android:id="@+id/max_temp_picker"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/min_temp_picker"
            app:layout_constraintTop_toTopOf="@id/min_temp_picker"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/min_temp_picker"/>


    <TextView
            android:textAlignment="center"
            android:id="@+id/humidity_picker_tv"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Humidity: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/min_temp_picker"
            app:layout_constraintBottom_toTopOf="@id/min_humidity_picker"
            android:layout_marginTop="20dp"/>
    <NumberPicker
            android:id="@+id/min_humidity_picker"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintRight_toLeftOf="@id/max_humidity_picker"
            app:layout_constraintTop_toBottomOf="@id/humidity_picker_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/light_picker_tv"
            android:layout_marginTop="20dp"/>
    <NumberPicker
            android:id="@+id/max_humidity_picker"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/min_humidity_picker"
            app:layout_constraintTop_toTopOf="@id/min_humidity_picker"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/min_humidity_picker"/>


    <TextView
            android:textAlignment="center"
            android:id="@+id/light_picker_tv"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Light: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/min_humidity_picker"
            app:layout_constraintBottom_toTopOf="@id/min_light_picker"
            android:layout_marginTop="20dp"/>
    <NumberPicker
            android:id="@+id/min_light_picker"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintRight_toLeftOf="@id/max_light_picker"
            app:layout_constraintTop_toBottomOf="@id/light_picker_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
    <NumberPicker
            android:id="@+id/max_light_picker"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/min_light_picker"
            app:layout_constraintTop_toTopOf="@id/min_light_picker"
            app:layout_constraintBottom_toBottomOf="@id/min_light_picker"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:backgroundTint="#888888"
            android:id="@+id/dismiss_new_seed_button"
            android:text="update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/min_light_picker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="5dp"
            android:onClick="updateRemoteSeed"/>

    <Button
            android:backgroundTint="#888888"
            android:id="@+id/save_new_seed_button"
            android:text="save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/max_light_picker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:onClick="saveNewSeed"/>

</androidx.constraintlayout.widget.ConstraintLayout>