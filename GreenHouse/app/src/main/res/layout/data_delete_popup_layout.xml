<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/data_delete_popup_tv"
            android:text="ARE YOU SURE TO DELETE IT?"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/data_delete_popup_button_ok"
            android:background="@android:color/transparent"
            android:text="DELETE!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/data_delete_popup_tv"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/data_delete_popup_tv"
            app:layout_constraintRight_toLeftOf="@id/data_delete_popup_button_dismiss"
    />

    <Button
            android:id="@+id/data_delete_popup_button_dismiss"
            android:background="@android:color/transparent"
            android:text="DISMISS!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/data_delete_popup_tv"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/data_delete_popup_tv"
            app:layout_constraintLeft_toRightOf="@id/data_delete_popup_button_ok"
    />

</androidx.constraintlayout.widget.ConstraintLayout>